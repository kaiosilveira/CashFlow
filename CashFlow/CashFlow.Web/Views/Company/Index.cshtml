@model CashFlow.Web.Models.CompanyModel

@{
    ViewBag.Title = "Index";
}


<div class="container">

    <header class="page-header text-center">
        <h2>Empresas</h2>

        <a href="@Url.Action("CreateOrEdit", "Company")" class="btn btn-info">
            <span class="glyphicon glyphicon-plus"></span>
            Adicionar
        </a>
    </header>
    
    <div class="row">
        <div class="col-md-12">
            @if (Model.Companies.Count() > 0)
            {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>CNPJ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach(var company in Model.Companies)
                    {
                        <tr>
                            <td>@company.Id</td>
                            <td>@company.Name</td>
                            <td>@company.Register</td>
                            <td><a href="@Url.Action("Details", "Company", new { @id = company.Id })" role="button" class="btn btn-primary btn-sm">Gerenciar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <p class="text-center" style="font-size: 24px; font-weight: bold; font-style: italic;">
                    Nenhuma empresa cadastrada ;(
                </p>
            }
        </div>
    </div>

</div>

