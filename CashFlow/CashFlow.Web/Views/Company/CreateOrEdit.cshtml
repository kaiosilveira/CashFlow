@model CashFlow.Web.Models.CompanyCreateOrEditModel

@{
    ViewBag.Title = "CreateOrEdit";
}

<div class="container">

    <header class="page-header text-center">
        @if(Model.Id != 0)
        {
            <h1>Editar dados da empresa @Model.Name</h1>
        }
        else
        {
            <h1>Cadastro de empresa</h1>
        }
    </header>

    <div class="row">
        <div class="col-md-offset-4 col-md-4 center-block" style="float: none;">
            @using(Html.BeginForm("CreateOrEdit", "Company", FormMethod.Post, new { @class = "form-group" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Digite a razão social da empresa" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FantasyName)
                    @Html.TextBoxFor(m => m.FantasyName, new { @class = "form-control", @placeholder = "Digite o nome fantasia da empresa" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Register)
                    @Html.TextBoxFor(m => m.Register, new { @class = "form-control", @placeholder = "Digite o CNPJ da empresa"})
                </div>
                
                <div class="btn-group pull-right">
                    @if (Model.Id != 0)
                    {
                        <a href="@Url.Action("Details", "Company", new { @id = Model.Id })" class="btn btn-default">
                            <span class="glyphicon glyphicon-ban-circle"></span>
                            Cancelar
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "Company")" class="btn btn-default">
                            <span class="glyphicon glyphicon-ban-circle"></span>
                            Cancelar
                        </a>
                    }
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-floppy-disk"></span>
                        Salvar
                    </button>
                </div>
            }
        </div>
    </div>
</div>
